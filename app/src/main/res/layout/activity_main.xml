        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/soccerHighlights"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="@string/JoshMpaka" />
