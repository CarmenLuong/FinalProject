        android:layout_height="34dp"
        android:text="@string/DevynnL"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Deezer"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="@string/DylanWilc"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
